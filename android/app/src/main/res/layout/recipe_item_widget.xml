<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/recipe_item_background">

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de la receta"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/recipe_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Descripción de la receta"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:maxLines="2"
        android:ellipsize="end" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipe_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="⏱ 30 min"
            android:textSize="11sp"
            android:textColor="@color/secondary_color"
            android:drawablePadding="4dp" />

        <TextView
            android:id="@+id/recipe_calories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🔥 250 cal"
            android:textSize="11sp"
            android:textColor="@color/tertiary_color"
            android:drawablePadding="4dp" />

        <TextView
            android:id="@+id/recipe_servings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🍽 4 raciones"
            android:textSize="11sp"
            android:textColor="@color/primary_color"
            android:drawablePadding="4dp" />

    </LinearLayout>

</LinearLayout>
